{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "vconcat": [
    {
      "title": {"text": "World Crude Price (USD/bbl)", "anchor": "start"},
      "width": 900,
      "height": 240,
      "data": {
        "url": "https://raw.githubusercontent.com/ESPLORARE/FIT3179A2/refs/heads/main/CrudePriceWorld.csv",
        "format": {
          "type": "csv",
          "parse": { "Month_Year": "date:%b-%y" }
        }
      },
      "mark": { "type": "line", "interpolate": "monotone", "strokeWidth": 2 },
      "encoding": {
        "x": {
          "field": "Month_Year",
          "type": "temporal",
          "scale": { "domain": { "param": "brush_from_volume" } },
          "axis": { "title": "", "tickCount": 10 }
        },
        "y": {
          "field": "Price(USD per barrel)",
          "type": "quantitative",
          "title": "USD per barrel"
        },
        "tooltip": [
          { "field": "Month_Year", "type": "temporal", "title": "Month" },
          { "field": "Price(USD per barrel)", "type": "quantitative", "title": "Price", "format": ",.2f" }
        ]
      }
    },

    {
      "title": {"text": "Malaysia Crude Exports â€” Monthly Volume (kg)", "anchor": "start"},
      "width": 900,
      "height": 70,
      "data": {
        "url": "https://raw.githubusercontent.com/ESPLORARE/FIT3179A2/refs/heads/main/malaysia_exports_yearmonth_volume.csv",
        "format": {
          "type": "csv",
          "parse": { "year_month": "date:%Y-%m" }
        }
      },
      "mark": { "type": "line", "interpolate": "monotone" },
      "params": [
        { "name": "brush_from_volume", "select": { "type": "interval", "encodings": ["x"] } }
      ],
      "encoding": {
        "x": {
          "field": "year_month",
          "type": "temporal",
          "axis": { "title": "", "tickCount": 10 }
        },
        "y": {
          "field": "export_volume_kg",
          "type": "quantitative",
          "axis": { "tickCount": 3, "grid": false },
          "title": ""
        },
        "tooltip": [
          { "field": "year_month", "type": "temporal", "title": "Month" },
          { "field": "export_volume_kg", "type": "quantitative", "title": "Volume (kg)", "format": "," }
        ]
      }
    }
  ]
}
